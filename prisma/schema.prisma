// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  env = "file:../.env"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
}

model BackupMember {
  id             Int    @id @default(autoincrement())
  player_name    String
  galactic_power Int
  ally_code      Int    @unique
  guildId        String?
}

model Member {
  id             Int    @id @default(autoincrement())
  player_name    String
  galactic_power Int
  ally_code      Int    @unique
  guildId        String?
}

model Guild {
  id        Int      @id @default(autoincrement())
  name      String
  url       String   @unique
}

model Unit {
  id               Int                @id @default(autoincrement())
  base_id          String             @unique
  name             String
  quantity         Int
  omicron_count_1  Int
  omicron_count_2  Int
  omicron_count_3  Int
  omicron1Id       String?
  omicron2Id       String?
  omicron3Id       String?
  omicronPlayers   UnitOmicronPlayers[] // Adicione isso
}

model UnitOmicronPlayers {
  id               Int      @id @default(autoincrement())
  unitId           Int
  unit             Unit     @relation(fields: [unitId], references: [id]) // Isto define o relacionamento
  omicronId        String   // This is the omicron ID, e.g., 'specialskill_STARKILLER01'
  players          String[]
}

model Ship {
  id       Int      @id @default(autoincrement())
  base_id  String   @unique
  name     String
  quantity Int
}

model SelectedUnit {
  id         Int      @id @default(autoincrement())
  base_id    String   @unique
  name       String
  type       UnitType
  omicron1Id       String?
  omicron2Id       String?
  omicron3Id       String?
}

enum UnitType {
  UNIT
  SHIP
}
