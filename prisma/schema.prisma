// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  env = "file:../.env"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model BackupMember {
  id             Int    @id @default(autoincrement())
  player_name    String
  galactic_power Int
  ally_code      Int    @unique
  guildId        Int?
}

model Member {
  id             Int    @id @default(autoincrement())
  player_name    String
  galactic_power Int
  ally_code      Int    @unique
  guildId        String
}

model Guild {
  id        Int      @id @default(autoincrement())
  name      String
  url       String   @unique
}

model Unit {
  id       Int      @id @default(autoincrement())
  name     String
  quantity Int
  omicron  Int
}

model Ship {
  id       Int      @id @default(autoincrement())
  name     String
  quantity Int
}
